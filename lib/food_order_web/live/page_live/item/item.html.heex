<div
  class="cursor-pointer shadow-lg rounded-lg p-4 mb-2 border hover:bg-neutral-100 transition"
  data-role="item"
  data-id={@product.id}
>
  <img
    src={~p"/images/#{@product.image_url}"}
    alt="hero"
    class="h-40 mb-4 mx-auto rounded-sm"
    data-role="hero-image"
  />
  <div class="text-center" data-role="item-details" data-id={@product.id}>
    <.product_details name={@product.name} size={@product.size} />
    <.product_info price={@product.price} />
  </div>
</div>
